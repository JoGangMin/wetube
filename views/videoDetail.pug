extends layouts/main

block content
    .video__player
        video(src=`/${video.fileUrl}` controls=true)
    .video__info
        a(href=`/videos/${routes.editVideo(video.id)}`) Edit Video
        h5.video__title=video.title
        span.video__views=video.views
        p.video__description=video.description
    .video__comments
        if video.comments.length === 1
            span.video_comments_number 1 comment
        else
            span.video_comments_number #{video.comments.length} comments